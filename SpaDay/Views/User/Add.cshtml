@{
}
@using SpaDay.ViewModels
@model AddUserViewModel

<h1>Sign Up Form</h1>

@if (ViewBag.error != null)
{
    <p>@ViewBag.error</p>
}


@*<div class="form-group">
   <label asp-for="PropertyName">PropertyName</label>
   <input asp-for="PropertyName" />
   <span asp-validation-for="PropertyName"></span>
</div>*@

<form method="post" asp-action="/user/add" asp-controller="User">
    Username:
    <br>
    <div class="form-group">
        <input asp-for="Username" />
        <span asp-validation-for="Username"></span>
    </div>
    <br>
    Email:
    <br>
    <div class="form-group">
        <input asp-for="Email" type="email"/>
        <span asp-validation-for="Email"></span>
    </div>
    <br>
    Password:
    <div class="form-group">
        <input asp-for="Password" type="password"/>
        <span asp-validation-for="Password"></span>
    </div>
    <br>
    Confirm Password:
    <br>
    <div class="form-group">
        <input asp-for="VerifyPassword" type="password"/>
        <span asp-validation-for="VerifyPassword"></span>
    </div>
    <br>
    <input type='submit' value='Submit'>
</form>
